{
    "extends": [
        "eslint:recommended",
        "airbnb",
        "prettier"
    ],
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/prefer-stateless-function": "off",
        "react/require-default-props": "off",
        "react/prop-types": "off",
        "react/no-danger": "off",
        "prettier/prettier": [
            "error"
        ]
    },
    "settings": {
        "import/core-modules": []
    },
    "env": {
        "browser": true
    }
}
